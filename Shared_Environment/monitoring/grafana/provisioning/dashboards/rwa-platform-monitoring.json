{
  "title": "RWA Platform - System Monitoring",
  "uid": "rwa-platform-monitoring",
  "tags": [
    "docker",
    "containers",
    "system",
    "rwa",
    "dissertation"
  ],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "environment",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(environment)",
        "label": "Environment",
        "multi": false,
        "current": {
          "selected": true,
          "text": "development",
          "value": "development"
        }
      },
      {
        "name": "container",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(container_name)",
        "label": "Container",
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Monitored Services",
      "type": "stat",
      "targets": [
        {
          "expr": "count(up{job=\"node-exporter\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Total CPU Usage",
      "type": "gauge",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 60
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Total Memory Usage",
      "type": "gauge",
      "targets": [
        {
          "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 85
              }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 0
      }
    },
    {
      "id": 4,
      "title": "CPU Usage by Core",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (rate(node_cpu_seconds_total{mode=\"idle\"}[5m]) * 100)",
          "legendFormat": "CPU {{cpu}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {
              "type": "linear",
              "log": 2
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "vis": false,
              "tooltip": false,
              "legend": false
            }
          },
          "color": {
            "mode": "palette-classic"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "CPU Context Switches",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_context_switches_total[5m])",
          "legendFormat": "Context Switches/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 6,
      "title": "Memory Breakdown",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_memory_Active_bytes / 1024 / 1024 / 1024",
          "legendFormat": "Active Memory (GB)",
          "refId": "A"
        },
        {
          "expr": "node_memory_Cached_bytes / 1024 / 1024 / 1024",
          "legendFormat": "Cached Memory (GB)",
          "refId": "B"
        },
        {
          "expr": "node_memory_Buffers_bytes / 1024 / 1024 / 1024",
          "legendFormat": "Buffers (GB)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": {
              "mode": "normal",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {
              "type": "linear",
              "log": 2
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "vis": false,
              "tooltip": false,
              "legend": false
            }
          },
          "color": {
            "mode": "palette-classic"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "red": "red",
                "value": 80
              }
            ]
          },
          "unit": "MB"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 7,
      "title": "Memory Available",
      "type": "bargauge",
      "targets": [
        {
          "expr": "(node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
          "legendFormat": "Available Memory (%)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 20
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    },
    {
      "id": 8,
      "title": "Network Traffic",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_bytes_total{device!~\"lo.*\"}[5m])) / 1024",
          "legendFormat": "Network RX (KB/s)",
          "refId": "A"
        },
        {
          "expr": "sum(rate(node_network_transmit_bytes_total{device!~\"lo.*\"}[5m])) / 1024",
          "legendFormat": "Network TX (KB/s)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {
              "type": "linear",
              "log": 2
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "vis": false,
              "tooltip": false,
              "legend": false
            }
          },
          "color": {
            "mode": "palette-classic"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          },
          "unit": "KBs"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      }
    },
    {
      "id": 9,
      "title": "Disk I/O",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(node_disk_read_bytes_total[5m])) / 1024 / 1024",
          "legendFormat": "Disk Read (MB/s)",
          "refId": "A"
        },
        {
          "expr": "sum(rate(node_disk_write_bytes_total[5m])) / 1024 / 1024",
          "legendFormat": "Disk Write (MB/s)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MBs"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      }
    },
    {
      "id": 10,
      "title": "Container Status",
      "type": "status-history",
      "targets": [
        {
          "expr": "up{job=\"node-exporter\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 32
      }
    },
    {
      "id": 11,
      "title": "System Load Average",
      "type": "stat",
      "targets": [
        {
          "expr": "node_load1",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.1
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 32
      }
    },
    {
      "id": 12,
      "title": "Disk Usage",
      "type": "table",
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes - node_filesystem_avail_bytes) / node_filesystem_size_bytes * 100",
          "format": "table",
          "instant": true,
          "legendFormat": "{{mountpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 40
      }
    }
  ],
  "timepicker": {},
  "annotations": {
    "list": []
  }
}
