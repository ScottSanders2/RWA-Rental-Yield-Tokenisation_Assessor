{
  "name": "rwa-tokenization-contracts",
  "version": "0.1.0",
  "description": "Smart contracts for RWA rental yield tokenization platform",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "flatten": "npm run flatten:all",
    "flatten:all": "hardhat flatten src/YieldBase.sol > flattened/YieldBase_flat.sol && hardhat flatten src/YieldSharesToken.sol > flattened/YieldSharesToken_flat.sol && hardhat flatten src/PropertyNFT.sol > flattened/PropertyNFT_flat.sol && hardhat flatten src/CombinedPropertyYieldToken.sol > flattened/CombinedPropertyYieldToken_flat.sol",
    "flatten:yieldbase": "hardhat flatten src/YieldBase.sol > flattened/YieldBase_flat.sol",
    "flatten:token": "hardhat flatten src/YieldSharesToken.sol > flattened/YieldSharesToken_flat.sol",
    "flatten:property": "hardhat flatten src/PropertyNFT.sol > flattened/PropertyNFT_flat.sol",
    "flatten:combined": "hardhat flatten src/CombinedPropertyYieldToken.sol > flattened/CombinedPropertyYieldToken_flat.sol",
    "size": "hardhat size-contracts",
    "clean": "hardhat clean && rm -rf flattened/",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0"
  },
  "devDependencies": {
    "hardhat": "^2.19.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat-contract-sizer": "^2.10.0",
    "@nomiclabs/hardhat-solhint": "^3.1.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^6.7.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
